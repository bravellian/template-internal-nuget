{
  "Paths": {
    "DocsRoot": "docs",
    "WorkRoot": "docs/70-work",
    "ItemsDir": "docs/70-work/items",
    "DoneDir": "docs/70-work/done",
    "TemplatesDir": "docs/70-work/templates",
    "WorkboardFile": "docs/70-work/README.md"
  },
  "Ids": {
    "Width": 4,
    "Prefixes": {
      "Bug": "BUG",
      "Task": "TASK",
      "Spike": "SPIKE"
    }
  },
  "Git": {
    "BranchPattern": "work/{id}-{slug}",
    "CommitMessagePattern": "Promote {id}: {title}",
    "DefaultBaseBranch": "main",
    "RequireCleanWorkingTree": true
  },
  "Github": {
    "Provider": "octokit",
    "DefaultDraft": true,
    "Host": "github.com",
    "Owner": "bravellian",
    "Repository": "template-internal-nuget"
  },
  "Validation": {
    "LinkExclude": [
      ".codex",
      ".opencode",
      ".workbench",
      "artifacts",
      "bin",
      "obj"
    ],
    "DocExclude": [
      "docs/generated",
      "docs/archive",
      "docs/tabler"
    ]
  },
  "Tui": {
    "Theme": "powershell",
    "UseEmoji": true,
    "AutoRefreshSeconds": 60
  }
}
